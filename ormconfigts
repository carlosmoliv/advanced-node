export default new DataSource({
  type: 'postgres',
  host: env.database.host,
  port: env.database.port as number | undefined,
  username: env.database.username,
  password: env.database.password,
  database: env.database.database,
  synchronize: false,
  logging: false,
  entities: [
    UserDbModel,
    AddressDbModel,
    ProducerDbModel,
    ProgramDbModel,
    DocumentDbModel,
    AcquisitionMethodDbModel,
    PropertyDbModel,
    WatershedDbModel,
    StageDbModel,
    CultureDbModel,
    CultureProductivityDbModel,
    ProjectDbModel,
    ModalityDbModel,
    LandDbModel,
  ],
  migrations: [path.join(__dirname, '..', 'migrations', '*.{ts,mjs,js}')],
})
