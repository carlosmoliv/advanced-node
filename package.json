{
  "name": "advanced-node",
  "version": "2.0.0",
  "description": "Professional API using Clean Architecture and TDD.",
  "main": "index.js",
  "keywords": [
    "clean architecture",
    "clean code",
    "tdd",
    "ddd",
    "solid",
    "design patterns",
    "node",
    "typescript",
    "jest",
    "typeorm"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "start": "node dist/main/api",
    "lint": "eslint .",
    "lint:fix": "yarn eslint --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "test:coverage": "yarn test --coverage",
    "test:fb-api": "yarn test -c ./jest.integration.config.js ./tests/external/facebook-api.test.ts",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosmoliv/advanced-node.git"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/module-alias": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jest-mock-extended": "^3.0.4",
    "lint-staged": "^13.2.3",
    "pg-mem": "^1.9.17",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "jsonwebtoken": "^9.0.1",
    "module-alias": "^2.2.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.2.29"
  },
  "engines": {
    "node": ">=18.x"
  }
}
