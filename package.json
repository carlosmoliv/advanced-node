{
  "name": "advanced-node",
  "version": "2.0.0",
  "description": "Professional API using Clean Architecture and TDD.",
  "main": "index.js",
  "keywords": [
    "clean architecture",
    "clean code",
    "tdd",
    "ddd",
    "solid",
    "design patterns",
    "node",
    "typescript",
    "jest",
    "typeorm"
  ],
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules -r dotenv/config --inspect=0.0.0.0:9229 src/main",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "start": "node -r dotenv/config dist/main",
    "lint": "eslint .",
    "lint:fix": "yarn eslint --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "test:coverage": "yarn test --coverage",
    "test:fb-api": "yarn test -c ./jest.integration.config.js ./tests/external/facebook-api.test.ts",
    "test:s3": "yarn test -c ./jest.integration.config.js ./tests/external/aws-s3-file-storage.test.ts",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosmoliv/advanced-node.git"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.2",
    "@types/aws-sdk": "^2.7.0",
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/module-alias": "^2.0.1",
    "@types/multer": "^1.4.7",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jest-mock-extended": "^3.0.4",
    "lint-staged": "^13.2.3",
    "pg-mem": "^1.9.17",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "aws-sdk": "^2.1429.0",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.2.29",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=18.x"
  }
}
